@model rememberMe.Models.Usrs

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<h4>Usrs</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="uName" class="control-label"></label>
                <input asp-for="uName" class="form-control" value="@ViewBag.RememberMeEmail" />
                <span asp-validation-for="uName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="uPassword" class="control-label"></label>
                <input type="password" asp-for="uPassword" class="form-control" value="@ViewBag.RememberMePassword" />
                <span asp-validation-for="uPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="checkbox" class="btn btn-primary" asp-for="RememberMe" /> Remember Me
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


